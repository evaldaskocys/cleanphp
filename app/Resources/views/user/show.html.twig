{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <ol class="breadcrumb">
            <li><a href="{{ path('user_index') }}">Back to the list</a></li>
        </ol>
        <h1>User</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Registration Date</th>
                    <td>{% if user.registrationDate %}{{ user.registrationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                <tr>
                    <th>Access Token</th>
                    <td>{{ user.accessToken }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-warning pull-right" href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger pull-left">
        {{ form_end(delete_form) }}
    </div>
    <div class="col-md-3"></div>
</div>
{% endblock %}
